<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabel="highlight"
                android:id="@+id/editText_editdiary_title"
                android:hint="标题"/>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:met_floatingLabel="highlight"
                android:id="@+id/editText_editdiary_text"
                android:layout_below="@id/editText_editdiary_title"
                android:gravity="top|left"
                app:met_hideUnderline="true"
                android:hint="内容"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/editText_editdiary_text"
                android:id="@+id/view_editdiary_spaceview"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>